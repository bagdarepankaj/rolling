<div class="row">
  <div class="col-md-8">
    <br>
    <%= render 'organization', organization: @organization %>

    <div class="col">
      <h3 class="mt-4 mb-2">
        <%= link_to "# Projects", organization_projects_path(@organization), style: "text-decoration: none; color: cadetblue;" %>
      </h3>
      <%= render 'projects/project_accordion', organization: @organization, projects: @projects %>
    </div>
  </div>

  <div class="col-md-4">
    <h3 class="text-center">Employees</h3>
    <ul class="list-group" id="employees">
      <%= render @employees %>
    </ul>
    <% if user_accessible? %>
      <div class="mt-2">
        <%= link_to 'Add Users to Organization', organization_users_list_path(@organization), remote: true, class: 'btn btn-primary text-center', style: "display: block;" %>
      </div>
    <% end %>
  </div>

</div>

<div id="users-list" class="mt-3">
</div>
