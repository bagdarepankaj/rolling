<div class="segement">
  <h1><%= @organization.name %></h1>
  <h5><%= @organization.description %></h5>

  <%= link_to 'Edit', edit_organization_path(@organization) %> |
  <%= link_to 'Back', :back %>
</div><br>

<h4>Employees</h4>
<ul class="list-group list-group-horizontal-md">
  <% @employees.each do |e| %>
    <li class="list-group-item">
      <%= e.full_name.present? ? e.full_name : e.email %>
      <%= link_to 'Remove', organization_remove_user_path(@organization, user_id: e), class: 'btn-sm float-right' %>
    </li>
  <% end %>
</ul>
<br>

<%= link_to 'Add Users to Organization', organization_users_list_path(@organization), remote: true, class: 'btn btn-primary' %>

<div id="users-list" class="mt-3">
</div>
