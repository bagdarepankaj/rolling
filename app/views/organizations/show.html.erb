<div class="segement">
  <h1>
    <%= @organization.name %>
    <% if user_accessible? %>
      <%= link_to 'Edit', edit_organization_path(@organization), class: 'btn btn-primary float-right' %>
    <% end %>
  </h1>
  <h5><%= @organization.description %></h5>
  <%= link_to 'Back', :back %>
</div><br>

<h4>Employees</h4>

<ul class="list-group list-group-horizontal-md" id="employees">
  <%= render @employees %>
</ul><br>

<% if user_accessible? %>
  <%= link_to 'Add Users to Organization', organization_users_list_path(@organization), remote: true, class: 'btn btn-primary' %>
<% end %>
<div id="users-list" class="mt-3">
</div>
